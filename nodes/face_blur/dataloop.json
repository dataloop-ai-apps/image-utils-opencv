{
  "displayName": "Blur Faces",
  "name": "image-utils-faceblur-opencv",
  "scope": "public",
  "version": "0.0.10",
  "description": "Detects faces in images using a pre-trained Haar Cascade classifier and applies a blur effect to the detected face regions, helping to anonymize individuals in the images.",
  "attributes": {
    "Provider": "Other",
    "Category": "Application",
    "Media Type": [
      "Image"
    ],
    "Application Type": [
      "Pipeline Node"
    ],
    "License": "Apache 2.0"
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/image-utils-opencv.git",
    "gitTag": "0.0.10"
  },
  "components": {
    "pipelineNodes": [
      {
        "invoke": {
          "type": "function",
          "namespace": "open-cv-face-blur.open-cv-face-blur.blur_faces"
        },
        "name": "face-blur",
        "categories": [
          "image-utils"
        ],
        "displayName": "Blur Faces",
        "description": "Detects faces in images using a pre-trained Haar Cascade classifier and applies a blur effect to the detected face regions, helping to anonymize individuals in the images.",
        "scope": "node",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "Face Blur",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "remote_path",
              "title": "Remote Path",
              "props": {
                "title": true,
                "type": "string",
                "default": "",
                "placeholder": "Insert remote path"
              },
              "widget": "dl-input"
            }
          ]
        }
      }
    ],
    "modules": [
      {
        "name": "open-cv-face-blur",
        "entryPoint": "nodes/face_blur/face_blur.py",
        "className": "ServiceRunner",
        "initInputs": [],
        "functions": [
          {
            "name": "blur_faces",
            "description": "Blur Faces using Open CV",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "displayIcon": "icon-dl-blur",
            "displayName": "Blur Faces"
          }
        ]
      }
    ],
    "services": [
      {
        "name": "open-cv-face-blur",
        "moduleName": "open-cv-face-blur",
        "runtime": {
          "podType": "regular-xs",
          "runnerImage": "dataloopai/dtlpy-agent:cpu.py3.8.opencv4.7",
          "numReplicas": 1,
          "concurrency": 10,
          "singleAgent": false,
          "autoscaler": {
            "type": "rabbitmq",
            "minReplicas": 0,
            "maxReplicas": 2,
            "queueLength": 10
          },
          "preemptible": false
        },
        "executionTimeout": 172800,
        "drainTime": 600,
        "onReset": "failed",
        "runExecutionAsProcess": false,
        "maxAttempts": 3,
        "operation": "none"
      }
    ]
  }
}