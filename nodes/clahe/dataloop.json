{
  "displayName": "Histogram Equalization using CLAHE",
  "name": "image-utils-clahe-opencv",
  "scope": "public",
  "version": "0.0.6",
  "description": "App to apply Histogram Equalization to images using CLAHE algorithm from OpenCV",
  "attributes": {
    "Provider": "Other",
    "Category": "Pipeline",
    "Pipeline Type": "Node",
    "Node Type": "Image Utils"
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/image-utils-opencv.git",
    "gitTag": "0.0.6"
  },
  "components": {
    "pipelineNodes": [
      {
        "invoke": {
          "type": "function",
          "namespace": "open-cv-clahe.open-cv-clahe.apply_clahe"
        },
        "name": "clahe",
        "categories": ["images"],
        "displayName": "Clahe",
        "description": "Histogram Equalization using CLAHE",
        "scope": "node",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "Clahe",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "remote_path",
              "title": "Remote Path",
              "props": {
                "title": true,
                "type": "string",
                "default": "",
                "placeholder": "Insert remote path"
              },
              "widget": "dl-input"
            }
          ]
        }
      }
    ],
    "modules": [
      {
        "name": "open-cv-clahe",
        "entryPoint": "nodes/clahe/clahe.py",
        "className": "ServiceRunner",
        "initInputs": [],
        "functions": [
          {
            "name": "apply_clahe",
            "description": "Histogram Equalization using CLAHE",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "displayIcon": "item-outline",
            "displayName": "Clahe"
          }
        ]
      }
    ],
    "services": [
      {
        "name": "open-cv-clahe",
        "moduleName": "open-cv-clahe",
        "runtime": {
          "podType": "regular-xs",
          "runnerImage": "dataloopai/dtlpy-agent:cpu.py3.8.opencv4.7",
          "numReplicas": 1,
          "concurrency": 10,
          "singleAgent": false,
          "autoscaler": {
            "type": "rabbitmq",
            "minReplicas": 0,
            "maxReplicas": 2,
            "queueLength": 10
          },
          "preemptible": false
        },
        "executionTimeout": 172800,
        "drainTime": 600,
        "onReset": "failed",
        "runExecutionAsProcess": false,
        "maxAttempts": 3,
        "operation": "none"
      }
    ]
  }
}
